<%= render :partial => "shared/header" %>
    <div id="header">
      
      <div id="navigation">
        <%= nav_links %>
      </div>
      
      <div id="search">
        <% form_tag '/search', :method => "get" do  %>
          Search
          <%= text_field_tag 'q', params[:q], :class => "input_text" %>
          <%= submit_button 'GO' %>
        <% end %>
      </div>
      
      <div class="clear">&nbsp;</div>
    </div>
    
    <div id="content">
        <div id="content_logo">
          <%= image_tag "logo_smaller.png" %>
        </div>
        
        <div id="content_message">
          <%= yield :message %>
        </div>
        
        <div class="clear">&nbsp;</div>

          <%= yield %>
        <div class="clear">&nbsp;</div>
    </div>
    
    <%= render :partial => "shared/footer" %>

