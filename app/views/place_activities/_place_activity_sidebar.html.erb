<div class="column_header">
    <span>
    <h2>Details</h2>
    </span>
</div>
<div id="profile_image">
  <%= image_tag (@place.icon.url(:profile), :class=>"profile_image") %>
</div>
<% if current_user.admin? %>
   <div id="manage_pictures"><%= link_to "Manage place pictures", place_pictures_path(@place) %></div>
<% end %>

<br>
<div id="address"> 
 <%= @place.address %><br>
 <%= @place.city %>, <%= @place.zip %><br>
 <% if @place.website.present? %>
 <%= link_to "website", @place.website %>
 <% end %>
</div>

<ul id="do_things">
    <li><%= link_to "SEARCH", :controller=>'search', :action=>"search_criteria", :id=>'find_people_link' , :t => "people" %></li>
   <li><%= link_to "EDIT MY INFO", edit_account_path %></li>
	<li>&nbsp;</li>
 <%= link_to "ADD TO MY FAVOURITES", '#', 'data-href' => "/user_place_activities/new?activity_id="+@activity.id.to_s+"&place_id="+@place.id.to_s+"&place_activity_id="+@place_activity.id.to_s+"&view=add_place_activity", :id => "add_place_activity", :class => "add_to_favorites"  %></li> 
   <li>&nbsp;</li>
     <li><%= link_to "INVITE A FRIEND", '#', 'data-href' => new_account_invitation_path, :class => "invite_a_friend" %>
 </ul>
<div id="manage_place"></div>
 
<script type="text/javascript" charset="utf-8">
$(document).ready(function() {
 $("#remove_place").click(function(event) {
   var target = $(this).attr('href');
   $.ajax({
     type: "POST",
     url: target,
     success: function() { $("#remove_place").hide() && $("#add_place").show() },
     data: { "_method": "delete", },
   });
   return false;
 });
});
</script>

