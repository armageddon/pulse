<h3 class="section"><%= @place.name %></h3>

<div id="profile_image">
  <%= image_tag @place.icon.url(:profile) %>
</div>
<% if current_user.admin? %>
   <div id="manage_pictures"><%= link_to "Manage place pictures", place_pictures_path(@place) %></div>
<% end %>

<div id="place_description">
  <%= @place.description %>
</div>
<br>
<div id="address">
 <%= @place.address %><br>
 <%= @place.city %>, <%= @place.zip %><br>
 <% if @place.website.present? %>
 <%= link_to "website", @place.website %>
 <% end %>
</div>


<div id="manage_place">
 <%= link_to "REMOVE FROM MY PLACES", account_place_path(@place), :id => "remove_place", :style => current_user.places.include?(@place) ? "" : "display: none;" %>
 <%= link_to "ADD TO MY PLACES", '#', 'data-href' => new_account_place_path(:place_id => @place), :class => "add_to_favorites" , :style => current_user.places.include?(@place) ? "display: none;" : "" %>

<script type="text/javascript" charset="utf-8">

$(document).ready(function() {

 $("#remove_place").click(function(event) {
   var target = $(this).attr('href');
   $.ajax({
     type: "POST",
     url: target,
     success: function() { $("#remove_place").hide() && $("#add_place").show() },
     data: { "_method": "delete", },
   });
   return false;
 });
});
</script>

</div>