  <% pa  = object.place_activity %>
<div class="object" id="<%= dom_id object %>" style='min-height:36px'>
  <div style="float:left;width:32px;height:40px">
    <%= image_tag(pa.place.icon.url(:thumb), :width => '30px', :height => '30px') %>
  </div>
  <div style="float:left;margin-left:5px;">
    <div class="what" style="margin-right:5px;width:450px;float:left">
      <% if pa.activity.id != ANYTHING_ACTIVITY_ID %>
        <%= link_to (pa.activity.name), place_activity_path(:id=>pa.id)%>
      <% else %>
        <%= pa.activity.name %>
      <% end %>
      at
      <% if pa.place.id != ANYWHERE_PLACE_ID %>
        <%= link_to (pa.place.name), place_activity_path(:id=>pa.id) %>
      <% else %>
        <%= pa.place.name %>
      <% end %>
    </div>
    <div class="clear"></div>
    <div class="place_why" style="margin-right:5px;width:440px;float:left">
      <i><%= object.description%>&nbsp;</i>
    </div>
  </div>
  <div class="actions" style="width:50px;float:left">
    <% if object.user_id == current_user.id %>
      <%= link_to image_tag("pencil-small.png", :width=>20,:class => " tooltip ", :title => "Edit"), '#', 'data-href' => "/user_place_activities/edit?source=profiles&id="+object.id.to_s, :class => "add_activity" %>
      <%= link_to image_tag("Cancel.png", :style=>'width:20px;margin-top:5px;',:class => " tooltip ", :title => I18n.translate("Remove_from_favorites")), '/user_place_activities/delete?user_place_activity_id =' + object.id.to_s, 'data-href' => '/account/update_user_place_activity?user_place_activity_id = ' + object.id.to_s + '&place_id = ' + pa.place_id.to_s + '&place_activity_id = ' + pa.id.to_s,:user_place_activity_id=>object.id,:activity_id => pa.activity_id, :place_id => pa.place_id, :class => "remove_place_activity" %>
    <% else %>
      <%= link_to image_tag("HPThumbUp.png", :width=>20,:class => " tooltip ", :title => I18n.translate("Add_to_favorites")), '#', 'data-href' => "/user_place_activities/free?add_type=neither&activity_id="+pa.activity_id.to_s+"&place_id="+pa.place_id.to_s+"&view=add_place_activity", :class => "add_activity" %>
    <% end %>
  </div>
  <div class="clear"></div>
</div>


