<% if object != nil %>
  <div class="object" id="<%= dom_id object %>">
    <div class="icon">
      <%= link_to image_tag(object.icon.url(:thumb), :width => '25px', :height => '25px'), object %>
    </div>
    <div class="info_container">
      <div class="info">
        <span>
          <%= link_to object.name, object %>
        </span>
      </div>
     <div class="category_info">
        <% user_count = object.users.find(:all,:select=>'distinct users.*').count %>
        <% if user_count > 0 %>
          <%=  user_count%> <%= user_count == 1 ? ' person' :  ' people'%>
        <%else%>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <% end  %>
      </div>
      <div class="category_info">
        <% place_count = object.places.find(:all,:select=>'distinct places.*').count %>
        <% if place_count > 0 %>
          <%=place_count%> <%= place_count  == 1 ? ' place' :  ' places'%>
        <% else %>
           &nbsp;&nbsp;&nbsp;&nbsp;
        <% end %>
      </div>
      <div class="clear"></div>
    </div>
    <div class="actions">
      <%= link_to image_tag("edit_add.png", :width=>20,:class => " tooltip ", :title => I18n.translate("Add_to_favorites")), '#', 'data-href' => "/user_place_activities/free?add_type=place&activity_id="+object.id.to_s+"&view=add_place", :activity_id => object.id, :class => "add_place" %>
    </div>
    <div class="clear"></div>
  </div>
<% end %>

