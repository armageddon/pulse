<div class="icon">
	<%= link_to image_tag(object.place.icon.url(:thumb), :width => '45px', :height => '45px'), object.place %>
</div>
<div class="info_container">
	<div class="info">
		<span>
     		<%= link_to (object.activity.name), object.activity %>
			&nbsp;at&nbsp;
			<%= link_to (object.place.name), object.place %>

			&nbsp;&nbsp;&nbsp;&nbsp; 
			<%=  object.place.neighborhood %>
		</span>
		
   	</div>
	<div class="clear"></div>
	&nbsp;&nbsp;&nbsp;<%= UserActivity.all(:conditions => {"place_id" => object.place.id, "activity_id" => object.activity.id}).count %>&nbsp;people do this here:
    <div class="clear"></div>
</div>
<div class="actions">
	<% if logged_in? && !current_user.user_activities.include?(object) %>
	<%=  link_to image_tag("HPThumbUp.png", :width=>20), '#', 'data-href' => new_account_activity_path(:activity_id => object.activity), :class => "add_activity" %>
	<% elsif  logged_in?    %>
	<%=  link_to image_tag("HPThumbDown.png", :width=>20), '#', 'data-href' => new_account_activity_path(:activity_id => object.activity), :class => "add_activity" %>
	<% end %>      
</div>
<div class="clear"></div>