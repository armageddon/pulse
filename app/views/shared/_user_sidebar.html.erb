<% @c1 = yield(:c1) %>
<% if @c1.present? %>
  <%= @c1 %>
<% else %>
  <h3 class="section">Me</h3>
  <div id="dashboard_icon">
    <%= image_tag current_user.icon.url(:profile) %>
  </div>
  <%= render :partial => "users/description", :locals => { :user => current_user } %>
  <div id="self_description">
    <span class="fancy_quotes">&#8220;</span>
    <%= current_user.description %>
