  </div>
  <ul id="do_things">
    <li><%= link_to "FIND PEOPLE", :controller=>'search', :id=>'find_people_link' , :t => "people" %></li>
    <li><%= link_to "FIND PLACES", :controller=>'search', :id=>'find_places_link' , :t => "places" %></li>
    <li><%= link_to "FIND ACTIVITIES", :controller=>'search', :id=>'find_activities_link' , :t => "activities" %></li>
    <li><%= link_to "EDIT MY INFO", edit_account_path %></li>

    <!-- <li><%= link_to "MANAGE PICTURES", account_pictures_path %></li> -->
    <li>&nbsp;</li>
      <li><%= link_to "INVITE A FRIEND", '#', 'data-href' => new_account_invitation_path, :class => "invite_a_friend" %>
  </ul>

<% end %>