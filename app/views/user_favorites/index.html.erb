<% content_for :c3 do %>
  <%= render :partial => "shared/mini_dashboard" %>
<br />
  <%= render :partial => "shared/message" %>	
<% end %>

<% content_for :message do %>
	<h2>These are your favourite people and things to do. The activities are what link you to your matches</h2>
<% end %>

<% form_tag search_path, :method => :get, :id => "favorites" do %>


	<div class="column_header">
      		<h2>My Favourites</h2>
	</div>
	<div style="float:left;width:356px; margin-bottom:4px;margin-top:0px">
		<h3 style="width:356px;font-size:14px" class="section_name">People</h3>
	</div>
	<div style="text-align: right;float:right;width:200px; margin-bottom:4px;margin-top:0px">
		<h4 id="people_paging" style="width:200px;font-size:12px" class="section_name">Page 1 of <%=@favorites.total_pages %></h4>
	</div>
	<div class='clear'></div>
	<div id='people_results'>
  		<%= render :partial => "shared_object_collections/horizontal_users_collection", :locals => {:collection => @favorites, :reqpath=> '/favorites/users'} %>
	</div>
	<div class='clear'></div>
	<br />

	<div style="float:left;width:556px; margin-bottom:4px;margin-top:0px">
		<h3 style="width:556px;font-size:14px" class="section_name">Activities</h3>
	</div>

	<div>
		<div style="padding:5px;margin-right:5px;width:180px;float:left;text-align:center;background-color:#EDEDED;">What</div>
		<div style="padding:5px;margin-right:5px;width:180px;float:left;text-align:center;background-color:#EDEDED;">Where</div>
		
		<div style="padding:5px;margin-right:5px;width:90px;float:left;text-align:center;background-color:#EDEDED;">Who</div>
		<div style="padding:5px;width:46px;float:left;text-align:center;background-color:#EDEDED;">&nbsp;</div>
		<div class="clear"></div>
		<%= render :partial => "user_place_activity_collection", :locals => {:collection => @user_place_activities, :reqpath=> '/favorites/user_place_activities'} %>
	</div>

<% end %>
